@model AutomatiseringLiefLeed.Models.Application

@{
    ViewData["Title"] = "Nieuwe aanvraag";
}

<h2>Aanvraagformulier</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="SenderName" />
    <input type="hidden" asp-for="RecipientId" />
    <input type="hidden" asp-for="RecipientName" />
    <input type="hidden" asp-for="DepartmentId" />

    <div class="form-group mb-3">
        <label asp-for="SenderId" class="form-label">1. Naam medewerker <span class="text-danger">(verplicht)</span></label>
        <input asp-for="SenderId" class="form-control" list="employeeList" placeholder="Zoek en selecteer medewerker..." autocomplete="off" />
        <datalist id="employeeList">
            @foreach (var employee in (ViewBag.EmployeesList as List<SelectListItem>) ?? new List<SelectListItem>())
            {
                <option value="@employee.Value">@employee.Text</option>
            }
        </datalist>
        <span asp-validation-for="SenderId" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="ReasonId" class="form-label">Reden aanvraag <span class="text-danger">*</span></label>
        <select asp-for="ReasonId" class="form-control" asp-items="ViewBag.Reasons">
            <option value="">-- Kies reden --</option>
        </select>
        <span asp-validation-for="ReasonId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DateOfIssue" class="form-label">Datum gebeurtenis <span class="text-danger">*</span></label>
        <input asp-for="DateOfIssue" type="date" class="form-control" />
        <span asp-validation-for="DateOfIssue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Aanvraag versturen</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
