@model AutomatiseringLiefLeed.Models.Application

@{
    ViewData["Title"] = "Nieuwe aanvraag";
}

<h2>Aanvraagformulier</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-controller="AanvraagForm" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="SenderId" class="form-label">1. Aanvrager <span class="text-danger">*</span></label>
        <select asp-for="SenderId" class="form-control" asp-items="ViewBag.Employees" required>
            <option disabled value="">-- Kies Aanvrager --</option>
        </select>
        <span asp-validation-for="SenderId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RecipientId" class="form-label">2. Ontvanger <span class="text-danger">*</span></label>
        <select asp-for="RecipientId" class="form-control" asp-items="ViewBag.Employees" required>
            <option disabled value="">-- Kies Ontvanger --</option>
        </select>
        <span asp-validation-for="RecipientId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ReasonId" class="form-label">3. Reden aanvraag <span class="text-danger">*</span></label>
        <select asp-for="ReasonId" class="form-control" asp-items="ViewBag.Reasons" required>
            <option disabled value="">-- Kies reden --</option>
        </select>
        <span asp-validation-for="ReasonId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DateOfIssue" class="form-label">4. Datum gebeurtenis <span class="text-danger">*</span></label>
        <input asp-for="DateOfIssue" type="date" class="form-control" required />
        <span asp-validation-for="DateOfIssue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Aanvraag versturen</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
