@{
    ViewData["Title"] = "Aanvraag ingediend";
    var aanvraagNummer = TempData["AanvraagNummer"] as string;
    var aanvraagType = TempData["AanvraagType"] as string;
    var ingediendOp = TempData["IngediendOp"] as DateTime? ?? DateTime.Now;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="container mt-5 text-center">
    <h2>Bedankt voor uw aanvraag!</h2>
    <p>
        Aanvraagnummer: <strong>@(aanvraagNummer ?? "-")</strong><br />
        Type aanvraag: <strong>@(aanvraagType ?? "-")</strong><br />
        Ingediend op: <strong>@ingediendOp.ToString("dd-MM-yyyy HH:mm")</strong>
    </p>

    <a href="/AanvraagForm/Overzicht" class="btn btn-info">Bekijk aanvraagstatus</a>
    <a href="/" class="btn btn-secondary ml-2">Terug naar Homepagina</a>
</div>
