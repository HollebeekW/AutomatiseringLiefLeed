@model List<AutomatiseringLiefLeed.Models.Application>
@{
    ViewBag.Title = "Admin Dashboard - Aanvragen";
}

<h2>Aanvraagoverzicht</h2>

<!-- Sorting -->
<form asp-action="ApplicationOverview" method="get" class="mb-3">
    <label for="sortOrder">Sorteren op:</label>
    <select id="sortOrder" name="sortOrder" class="form-control d-inline-block w-auto ml-2" onchange="this.form.submit()">
        <option value="date" selected="@(ViewBag.CurrentSort == "date" || ViewBag.CurrentSort == null)">Datum van aanvraag</option>
        <option value="sender" selected="@(ViewBag.CurrentSort == "sender")">Aanvrager</option>
        <option value="recipient" selected="@(ViewBag.CurrentSort == "recipient")">Ontvanger</option>
        <option value="reason" selected="@(ViewBag.CurrentSort == "reason")">Reden</option>
        <option value="status" selected="@(ViewBag.CurrentSort == "status")">Status</option>
    </select>
</form>
<!-- End sorting -->

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Aanvrager</th>
            <th>Ontvanger</th>
            <th>Datum aanvraag</th>
            <th>Datum uitgifte</th>
            <th>Geaccepteerd</th>
            <th>Reden</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var app in Model)
            {
                <tr>
                    <td>@app.Id</td>
                    <td>@(app.Sender != null ? app.Sender.Roepnaam + " " + app.Sender.Achternaam : app.SenderId.ToString())</td>
                    <td>@(app.Recipient != null ? app.Recipient.Roepnaam + " " + app.Recipient.Achternaam : app.RecipientId.ToString())</td>
                    <td>@app.DateOfApplication?.ToString("dd-MM-yyyy")</td>
                    <td>@app.DateOfIssue?.ToString("dd-MM-yyyy")</td>
                    <td>@(app.IsAccepted == true ? "Ja" : "Nee")</td>
                    <td>@(app.Reason != null ? app.Reason.Name : app.ReasonId.ToString())</td>
                    <td>
                        @Html.ActionLink("Bekijken", "Details", new { id = app.Id }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">Geen aanvragen gevonden.</td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="~/Admin/Index" class="btn btn-secondary mb-3">Terug naar dashboard</a>
